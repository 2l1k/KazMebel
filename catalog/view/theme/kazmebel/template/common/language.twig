{% if languages|length > 1 %}
<div class="lang js-lang">
	<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-language">
		<div class="btn-group">
			{% for language in languages %}
			{% if language.code == code %} 
			<a class="btn lang__btn js-lang-btn" data-toggle="dropdown">{{ language.name }}</a>
			{% endif %}
			{% endfor %}

			<ul class="lang__list">
				{% for language in languages %}
				{% if language.code != code %} 
				<li class="lang__item">
					<button class="btn lang__link" type="button" name="{{ language.code }}">{{ language.name }}</button>
				</li>
				{% endif %}
				{% endfor %}
			</ul>
		</div>
		<input type="hidden" name="code" value="" />
		<input type="hidden" name="redirect" value="{{ redirect }}" />
	</form>
</div>
{% endif %}
