		{% if error_warning %}
		<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
		{% endif %}

		<div class="profile-form">
			<form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">
				<input type="text" name="firstname" placeholder="{{ entry_firstname }}" class="prof" value="{{ firstname }}" id="input-firstname">
				<input type="text" name="lastname" value="{{ lastname }}" placeholder="{{ entry_lastname }}" id="input-lastname" class="prof">
				<input type="text" name="telephone" value="{{ telephone }}" placeholder="{{ entry_telephone }}" id="input-telephone" class="phn">
				<input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="email">

				{% for custom_field in custom_fields %}

				{% if custom_field.type == 'date' %}
				<input type="text" id="date" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" value="{% if account_custom_field[custom_field.custom_field_id] %}{{ account_custom_field[custom_field.custom_field_id] }}{% else %}{{ custom_field.value }}{% endif %}" placeholder="{{ custom_field.name }}" id="input-custom-field{{ custom_field.custom_field_id }}" class="prof" />
				{% if error_custom_field[custom_field.custom_field_id] %}
				<div class="text-danger">{{ error_custom_field[custom_field.custom_field_id] }}</div>
				{% endif %}
				{% endif %}

				{% if custom_field.type == 'select' %}
				<select name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" id="input-custom-field{{ custom_field.custom_field_id }}" class="form-control">
					<option value="">{{ text_select }}</option>
					{% for custom_field_value in custom_field.custom_field_value %}
					{% if account_custom_field[custom_field.custom_field_id] and custom_field_value.custom_field_value_id == account_custom_field[custom_field.custom_field_id] %}
					<option value="{{ custom_field_value.custom_field_value_id }}" selected="selected">{{ custom_field_value.name }}</option>
					{% else %}
					<option value="{{ custom_field_value.custom_field_value_id }}">{{ custom_field_value.name }}</option>
					{% endif %}
					{% endfor %}
				</select>
				{% if error_custom_field[custom_field.custom_field_id] %}
				<div class="text-danger">{{ error_custom_field[custom_field.custom_field_id] }}</div>
				{% endif %}
				{% endif %}

				{% if custom_field.type == 'text' %}
				<input type="text" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" value="{% if account_custom_field[custom_field.custom_field_id] %}{{ account_custom_field[custom_field.custom_field_id] }}{% else %}{{ custom_field.value }}{% endif %}" placeholder="{{ custom_field.name }}" id="input-custom-field{{ custom_field.custom_field_id }}" class="address" />
				{% if error_custom_field[custom_field.custom_field_id] %}
				<div class="text-danger">{{ error_custom_field[custom_field.custom_field_id] }}</div>
				{% endif %}
				{% endif %}

				{% endfor %}

				<button type="submit" value="{{ button_continue }}">Изменить данные</button>
			</form>
			
			<h2 class="section__title"></h2>

			<form action="{{ action_pass }}" method="post" enctype="multipart/form-data" class="form-horizontal">

				<input type="password" placeholder="Текущий пароль" class="pass" required>

				<input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="input-password" class="pass" required />
				{% if error_password %}
				<div class="text-danger">{{ error_password }}</div>
				{% endif %}

				<input type="password" name="confirm" value="{{ confirm }}" placeholder="{{ entry_confirm }}" id="input-confirm" class="pass" required />
				{% if error_confirm %}
				<div class="text-danger">{{ error_confirm }}</div>
				{% endif %}

				<button type="submit" value="{{ button_continue }}">Изменить пароль</button>

			</form>
		</div>

		

		


		<div class="buttons clearfix">
			<div class="pull-left"><a href="{{ back }}" class="btn btn-default">{{ button_back }}</a></div>
			<div class="pull-right">
				<input type="submit" value="{{ button_continue }}" class="btn btn-primary" />
			</div>
		</div>
	</form>


	{{ content_bottom }}
</div>
</section>
